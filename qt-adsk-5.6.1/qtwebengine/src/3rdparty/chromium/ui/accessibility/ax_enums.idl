    access_key,
    action,
    auto_complete,
    container_live_relevant,
    container_live_status,
    description,
    display,
    help,
    html_tag,
    // Only used when invalid_state == invalid_state_other.
    aria_invalid_value,
    name,
    live_relevant,
    live_status,
    placeholder,
    role,
    shortcut,
    url,
    value
