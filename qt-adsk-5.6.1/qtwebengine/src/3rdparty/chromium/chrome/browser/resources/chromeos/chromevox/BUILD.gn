  test_type = "webui"
  sources = chromevox_tests_gypi_values.chromevox_tests_unitjs_sources
  test_deps_js_outputs = get_target_outputs(":chromevox_test_deps_js")
  deps_js = test_deps_js_outputs[0]
  deps = [
    ":chromevox_test_deps_js",
  ]
