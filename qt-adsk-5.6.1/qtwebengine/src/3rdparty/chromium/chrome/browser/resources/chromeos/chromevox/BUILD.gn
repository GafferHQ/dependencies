}

js2gtest("chromevox_extjs_tests") {
  test_type = "extension"
  sources = chromevox_tests_gypi_values.chromevox_tests_extjs_sources
  sources -= [ "braille/liblouis_test.extjs" ]  # TODO(GYP)
  defines = [ "HAS_OUT_OF_PROC_TEST_RUNNER" ]
}
