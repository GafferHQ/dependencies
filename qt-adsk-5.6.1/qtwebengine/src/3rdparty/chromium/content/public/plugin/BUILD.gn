group("plugin") {
  if (is_component_build) {
    public_deps = [
      "//content",
    ]
  } else {
    public_deps = [
      ":plugin_sources",
    ]
  }
}

source_set("plugin_sources") {
  visibility = [ "//content/*" ]

  sources = [
    "content_plugin_client.h",
  ]

  deps = [
    "//base",
    "//content/plugin",
    "//content/public/common:common_sources",
  ]
}
